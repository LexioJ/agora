			<step>OCA\Agora\Migration\RepairSteps\DeleteInvalidRecords</step>
			<step>OCA\Agora\Migration\RepairSteps\UpdateHashes</step>
			<step>OCA\Agora\Migration\RepairSteps\CreateIndices</step>
		</post-migration>
		<install>
			<step>OCA\Agora\Migration\RepairSteps\Install</step>
		</install>
	</repair-steps>
	<commands>
		<command>OCA\Agora\Command\Share\Add</command>
		<command>OCA\Agora\Command\Share\Remove</command>
		<command>OCA\Agora\Command\Db\Purge</command>
		<command>OCA\Agora\Command\Db\RemoveIndices</command>
