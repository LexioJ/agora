		<admin-section>OCA\Agora\Settings\AdminSection</admin-section>
		<personal>OCA\Agora\Settings\PersonalSettings</personal>
		<personal-section>OCA\Agora\Settings\PersonalSection</personal-section>
	</settings>
	<activity>
		<filters>
			<filter>OCA\Agora\Filter\ActivityFilter</filter>
		</filters>
		<providers>
			<provider>OCA\Agora\Provider\ActivityProvider</provider>
		</providers>
	</activity>
	<navigations>
