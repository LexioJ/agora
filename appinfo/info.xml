	<dependencies>
		<php min-version="8.1"/>
		<nextcloud min-version="30" max-version="32"/>
	</dependencies>
	<background-jobs>
		<job>OCA\Agora\Cron\NotificationCron</job>
		<job>OCA\Agora\Cron\AutoReminderCron</job>
	</background-jobs>
	<repair-steps>
		<pre-migration>
			<step>OCA\Agora\Migration\RepairSteps\RemoveObsoleteMigrations</step>
		</pre-migration>
		<post-migration>
			<step>OCA\Agora\Migration\RepairSteps\DropOrphanedTables</step>
